<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.SunShineandroid" parent="Theme.MaterialComponents.Light.DarkActionBar.Bridge">
        <item name="android:actionBarStyle">@style/MyActionBar</item>
        <item name="colorPrimary">@color/n100</item>
        <item name="android:textColorPrimary">@color/n900</item>
        <item name="colorPrimaryDark">@color/n100</item>
        <item name="colorAccent">@color/b300</item>
        <item name="android:textViewStyle">@style/MyTextViewStyle</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:statusBarColor">@color/n100</item>
        <item name="android:background">@color/n100</item>
        <item name="fontFamily">@font/roboto</item>
        <item name="materialCalendarStyle">@style/Widget.MaterialComponents.MaterialCalendar</item>
        <item name="materialCalendarFullscreenTheme">@style/ThemeOverlay.MaterialComponents.MaterialCalendar.Fullscreen</item>
        <item name="materialCalendarTheme">@style/ThemeOverlay.MaterialComponents.MaterialCalendar</item>
    </style>

    <style name="MyActionBar" parent="@android:style/Widget.Holo.Light.ActionBar">
        <item name="android:background">@color/n100</item>
        <item name="android:textColorSecondary">@color/n900</item>
    </style>

    <style name="MyTextViewStyle" parent="android:Widget.TextView">
        <item name="android:background">#00000000</item>
    </style>
</resources>